<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/crv_comment"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_commentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="User Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/crv_comment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tc_commentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Comment Loading "
        app:layout_constraintStart_toEndOf="@+id/crv_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_commentName" />
</android.support.constraint.ConstraintLayout>