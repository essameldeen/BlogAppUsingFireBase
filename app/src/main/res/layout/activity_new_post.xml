<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_newPost">

    <Toolbar
        android:id="@+id/toolbar_newPost"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:title="New Post"
        android:titleTextColor="#fff"
        android:layout_height="50dp">

    </Toolbar>

    <ImageView
        android:id="@+id/iv_imgePost"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/smile"

         />
    <EditText
        android:id="@+id/et_descriptionPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_imgePost"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/bt_submitPost"
        android:layout_below="@id/et_descriptionPost"
        android:layout_margin="50dp"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:text="Post Blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ProgressBar
        android:id="@+id/post_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        />

</RelativeLayout>